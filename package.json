{
  "name": "cadencehelper",
  "displayName": "CadenceHelper",
  "description": "",
  "version": "0.0.1",
  "engines": { "vscode": "^1.106.0" },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:flowContracts.switchNetwork",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flowContracts.switchNetwork",
        "title": "Flow: Switch Contract Addresses"
      },
      {
        "command": "flowContracts.selectWorkspaceAndSwitch",
        "title": "Flow: Select Workspace & Switch Network"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Flow Address Switcher",
      "properties": {
        "flowContracts.findGlobs": {
          "type": "array",
          "default": [
            "**/*.cdc",
            "**/*.cadence"
          ],
          "description": "Glob patterns for Cadence files to update"
        },
        "flowContracts.flowFileName": {
          "type": "string",
          "default": "flow.json",
          "description": "Name of your flow configuration file in workspace root"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.2",
    "@types/vscode": "^1.106.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
